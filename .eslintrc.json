{
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true
    },
    "globals": {
        "_": true,
        "d3": true,
        "jsPDF": true,
        "svgAsPngUri": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "comma-dangle": ["error", "always-multiline"],
        "indent": ["error", 4, {
            "SwitchCase": 1
        }],
        "linebreak-style": ["error", "unix"],
        "no-console": ["error", {
            "allow": ["error"]
        }],
        "no-trailing-spaces": ["error"],
        "no-unused-vars": ["error", {
            "args": "none",
            "varsIgnorePattern": "^_"
        }],
        "quotes": ["error", "double"],
        "semi": ["error", "always"]
    }
}